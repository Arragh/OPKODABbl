@model OPKODABbl.ViewModels.Account.ResetPasswordViewModel

<div class="content_wrapper">
    <a class="content_wrapper_blue" asp-action="ResetPassword" asp-controller="Account">Восстановление пароля</a>
    <form class="login_page" asp-action="ResetPassword" asp-controller="Account" asp-antiforgery="true" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <img style="vertical-align: middle;" src="~/images/login_icon.png" />
            <input class="login_page" type="text" placeholder="Логин" asp-for="Name" />
        </div>
        <div class="attention_wrapper">
            <span class="wrong_data" asp-validation-for="Name"></span>
        </div>
        <div>
            <img style="vertical-align: middle;" src="~/images/mail_icon.png" />
            <input class="login_page" type="text" placeholder="Email" asp-for="Email" />
        </div>
        <div class="attention_wrapper">
            <span class="wrong_data" asp-validation-for="Email"></span>
        </div>
        <div>
            <input class="login_button" type="submit" value="Восстановить" />
        </div>
    </form>
</div>

@section scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}