@model OPKODABbl.ViewModels.News.NewsArchiveViewModel

<div class="content_wrapper">
    <a class="content_wrapper_blue" asp-action="NewsArchive" asp-controller="News">Новости</a><br />
    <div class="newsarchive_wrapper">
        @foreach (var item in Model.News)
        {
            <div class="news_wrapper" style="background-image: url(@Model.PreviewImages.FirstOrDefault(i => i.Key == item.Id).Value)">
                <img src="~/images/news_img_border.png" /><span class="news_date">@item.NewsDate.ToShortDateString()</span>
                <a asp-action="ReadNews" asp-controller="News" asp-route-newsId="@item.Id"></a>
                <div class="newsarchive_title">@item.NewsTitle</div>
                <div class="newsarchive_bodytext">@Html.Raw(item.NewsBody)</div>
                <div class="newsarchive_readnext">Читать дальше...</div>
            </div>
        }
    </div>
</div>